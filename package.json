{
    "name": "goto-package",
    "displayName": "Goto Package",
    "description": "Go to npm/composer package folder quickly",
    "publisher": "ctf0",
    "repository": "https://github.com/ctf0/vscode-goto-package",
    "version": "0.2.0",
    "engines": {
        "vscode": "^1.68.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "npm",
        "composer",
        "navigate"
    ],
    "activationEvents": [
        "onLanguage:json"
    ],
    "main": "./out/main",
    "contributes": {
        "commands": [
            {
                "command": "gotoPackage.removePackage",
                "title": "remove package"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "gotoPackage.removePackage",
                    "when": "false"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "Goto Package",
            "properties": {
                "gotoPackage.packageManagersList": {
                    "type": "array",
                    "default": [
                        {
                            "url": "https://npmjs.com/package/",
                            "registry": "npm",
                            "cmnd": "npm uninstall",
                            "file_to_search": "package.json",
                            "file_to_open": "package.json",
                            "pkg_info_file": {},
                            "folder": "node_modules",
                            "regex": "(d|devD|peerD)ependencies\": {",
                            "pkg_name_regex": "\"(\\S*)\": ",
                            "showRemoveLink": true
                        },
                        {
                            "url": "https://packagist.org/packages/",
                            "registry": "packagist",
                            "cmnd": "composer remove",
                            "file_to_search": "composer.json",
                            "file_to_open": "composer.json",
                            "pkg_info_file": {
                                "file": "vendor/composer/installed.json",
                                "key": "packages"
                            },
                            "folder": "vendor",
                            "regex": "require(-dev)?\": {",
                            "pkg_name_regex": "\"(\\S*)\": ",
                            "showRemoveLink": true
                        }
                    ],
                    "description": "package managers list"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run esbuild-base -- --minify",
        "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
        "esbuild": "npm run esbuild-base -- --sourcemap",
        "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
        "watch": "npm run vscode:prepublish",
        "test-compile": "tsc -p ./"
    },
    "devDependencies": {
        "@types/glob": "^8.0.0",
        "@types/lodash": "^4.14.188",
        "@types/node": "^18.11.9",
        "@types/vscode": "^1.68.0",
        "@typescript-eslint/eslint-plugin": "^5.42.0",
        "@typescript-eslint/parser": "^5.42.0",
        "esbuild": "^0.15.13",
        "eslint": "^8.27.0",
        "typescript": "^4.8.4"
    },
    "dependencies": {
        "lodash": "^4.17.21"
    }
}
